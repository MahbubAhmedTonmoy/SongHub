@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
	
		<li class="notifications">
			
			<a href="#">
				<i class="glyphicon glyphicon-bell "></i>
				<span class="badge js-notifications-count hide"></span>
			</a>
		</li>
		<li class="dropdown">
			<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				@User.Identity.GetUserName()
			</a>
			<ul class="dropdown-menu">
				<li><a class="dropdown-item" href="@Url.Action("Mine","Gigs")">My upcomming Event</a></li>
				<li><a class="dropdown-item" href="@Url.Action("Attending","Gigs")">Event I'm Going</a></li>
				<li><a class="dropdown-item" href="#">Artists I'm Following</a></li>
				<div class="dropdown-divider"></div>
				<li><a href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>
			</ul>
		</li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
